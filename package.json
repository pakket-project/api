{
  "name": "@pakket-project/api",
  "version": "1.0.0",
  "description": "Pakket API",
  "homepage": "https://github.com/pakket-project/api",
  "repository": {
    "type": "git",
    "url": "https://github.com/pakket-project/api"
  },
  "author": "pakket-project",
  "main": "./dist/main",
  "private": true,
  "engines": {
    "node": "14.17.6"
  },
  "scripts": {
    "clean:dist": "sudo rm -rf dist/",
    "clean:node": "sudo rm -rf node_modules/",
    "script": "node ./tools/scripts/dist",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:tsc": "tsc --noEmit -p .",
    "lint:all": "yarn lint; yarn lint:tsc",
    "lint:fix": "eslint --fix '**/*.ts'",
    "prettier": "prettier -c .",
    "prettier:fix": "prettier -c -w .",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch --preserveWatchOutput",
    "start:debug": "nest start --debug 0.0.0.0:9229 --watch --preserveWatchOutput",
    "start:prod": "node dist/main"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.6",
    "@nestjs/core": "^8.0.6",
    "chalk": "^4.1.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.3.0",
    "tsconfig-paths": "^3.10.1",
    "utility-types": "^3.10.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.2",
    "@nestjs/schematics": "^8.0.2",
    "@nestjs/testing": "^8.0.4",
    "@tribecamp/eslint-config-base": "^1.1.2",
    "@tribecamp/eslint-config-typescript": "^1.2.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/node": "14.17.3",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  }
}
